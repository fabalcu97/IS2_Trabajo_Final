div.container
    h2 Detail
    table.table.table-bordered
        thead
            tr
                th Name
                th Quantity
                th Unit
        tbody
            tr(
                *ngFor='let product of products; let i = index'
            )
                td {{product.name}}
                td {{detail[i].quantity}}
                td {{product.unitPrice}}