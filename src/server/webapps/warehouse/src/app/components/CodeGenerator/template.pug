html
  body.main
    .normal-screen
      .container.min-height(style='margin-top: 20px;')
        .row
          .col-xs-4.col-md-offset-8
            #card.login
              .front.signin_form
              form.login-form((ngSubmit)="generate()")
                .form-group
                    .input-group
                      input.form-control(
                        name='type',
                        type='text',
                        placeholder='Type account',
                        [(ngModel)]='typeAccount',
                        required
                      )
                      span.input-group-addon
                        i.glyphicon.glyphicon-user
                .form-group.sign-btn
                    .input-group
                      input.btn(
                        type="submit",
                        value="Generate code"
                      )
              a.sign-btn(
                href="/"
              ) Home
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jQuery-Flip/1.0.18/jquery.flip.js')
