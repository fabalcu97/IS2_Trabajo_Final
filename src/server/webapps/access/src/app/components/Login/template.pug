html
  body.main
    .login-screen
    .login-center
      .container.min-height(style='margin-top: 20px;')
        .row
          .col-xs-4.col-md-offset-8
            #card.login
              .front.signin_form
                p Login Your Account
                form.login-form((ngSubmit)="submit()")
                  .form-group
                    .input-group
                      input.form-control(type='string', placeholder='Type your username', [(ngModel)]="person.username", name="username")
                      span.input-group-addon
                        i.glyphicon.glyphicon-user
                  .form-group
                    .input-group
                      input.form-control(type='password', placeholder='Type your password', [(ngModel)]="person.password", name="password")
                      span.input-group-addon
                        i.glyphicon.glyphicon-lock
                  .form-group.sign-btn
                    input.btn(type='submit', value='Log in')
                    p
                      strong New?
                      br
                      a#flip-btn.signup.signup_link(uiSref='register') Sign up for a new account
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jQuery-Flip/1.0.18/jquery.flip.js')
