html
  body.main
    .login-screen
    .login-center
      .container.min-height(style='margin-top: 20px;')
        .row
          .col-xs-4.col-md-offset-8
            #card.login
              .front.signin_form
                p Login Your Account
                form.login-form
                  .form-group
                    .input-group
                      input.form-control(type='email', placeholder='Type your email')
                      span.input-group-addon
                        i.glyphicon.glyphicon-user
                  .form-group
                    .input-group
                      input.form-control(type='password', placeholder='Type your password')
                      span.input-group-addon
                        i.glyphicon.glyphicon-lock
                  .form-group.sign-btn
                    input.btn(type='submit', value='Log in')
                    p
                      strong New?
                      br
                      a#flip-btn.signup.signup_link(uiSref='register') Sign up for a new account
              .back.signup_form(style='opacity: 0;')
                p Sign Up for Your New Account
                form.login-form
                  .form-group
                    .input-group
                      input.form-control(type='text', placeholder='Username')
                      span.input-group-addon
                        i.glyphicon.glyphicon-user
                  .form-group
                    .input-group
                      input.form-control(type='text')
                      span.input-group-btn
                        button.btn.btn-cyan(type='button')
                          span.fa.fa-refresh
                  .form-group
                    .input-group
                      input.form-control(type='password', placeholder='Confirm Password')
                      span.input-group-addon
                        i.glyphicon.glyphicon-lock
                  .form-group
                    .input-group
                      input.form-control(type='email', placeholder='Email')
                      span.input-group-addon
                        i.glyphicon.glyphicon-envelope
                  .form-group.sign-btn
                    input.btn(type='submit', value='Sign up')
                    br
                    br
                    p
                      | You have already Account So 
                      a#unflip-btn.signup(href='#') Log in
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jQuery-Flip/1.0.18/jquery.flip.js')
