    .wrapper
        
        h3 Daily            
            input(type='date', name='bday')
        br
        
        label.switch
            input(
                type="checkbox",          
                [(ngModel)]='switchIO',
                (click)='changeSwitch()'                
            )
            div.slider.round
            br
            h4.text-center(
               *ngIf="switchIO==false"
            ) Output

            h4.text-center(
               *ngIf="switchIO==true"
            ) Input
       
        br
       
        table(style='width:100%')
            tr  
                th #
                th # Bill               
                th Subtotal            
                th Total 
            tr(*ngFor='let bill of bills; let i = index')
                th {{i+1}}
                th {{ orders[i].billId }}                
                th {{ bill.subtotal }}
                th {{ bill.total }}
             
              
