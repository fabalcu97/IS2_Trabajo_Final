.wrapper
    width 600px
    margin 20px auto

.switch
    position relative
    display inline-block
    width 60px
    height 34px
    input
        display none

.slider
    position absolute
    cursor pointer
    top 0
    left 0
    right 0
    bottom 0
    background-color #1bd330
    -webkit-transition .4s
    transition .4s
    &:before
        position absolute
        content ""
        height 26px
        width 26px
        left 4px
        bottom 4px
        background-color white
        -webkit-transition .4s
        transition .4s
    &.round
        border-radius 34px
        &:before
            border-radius 50%

input
    &:checked
        & + .slider
            background-color #2196F3
            &:before
                -webkit-transform translateX(26px)
                -ms-transform translateX(26px)
                transform translateX(26px)
    &:focus
        & + .slider
            box-shadow 0 0 1px #2196F3

/* TABLAA */

table
    color #333
    font-family Helvetica, Arial, sans-serif
    width 640px
    border-collapse collapse
    border-spacing 0

td, th
    border 1px solid transparent
    height 30px
    transition all 0.3s

th
    background #13c1c1
    font-weight bold

td
    background #FAFAFA
    text-align center

tr
    &:nth-child(even)
        td
            background #aef2f2
    &:nth-child(odd)
        td
            background #49c1c1
    td
        &:hover
            background #175b5b
            color #FFF


/* Button */

a
    &.button
        display block
        position center
        float left
        width 120px
        //padding 0
        //margin 10px 20px 10px 0
        font-weight 600
        text-align center
        line-height 50px
        color #FFF
        border-radius 5px
        transition all 0.2s


.btnLightBlue
    background #5DC8CD
    &.btnPush
        box-shadow 0px 5px 0px 0px #1E8185
        &:hover
            box-shadow 0px 0px 0px 0px #1E8185
    &.btnBorder
        box-shadow 0px 0px 0px 0px #01939A
        &:hover
            box-shadow 0px 0px 0px 5px #01939A
    &.btnFloat
        &:before
            background #5DC8CD


.btnFade
    &.btnBlueGreen
        &:hover
            background #21825B
    &.btnLightBlue
        &:hover
            background #01939A
    &.btnOrange
        &:hover
            background #FF8E00
    &.btnPurple
        &:hover
            background #6D184B

.btnPush
    &:hover
        margin-top 15px
        margin-bottom 5px

.btnFloat
    background none
    box-shadow 0px 0px 0px 0px rgba(0, 0, 0, 0.5)
    &:before
        content 'Float'
        display block
        position absolute
        top 0
        left 0
        width 120px
        height 50px
        border-radius 5px
        transition all 0.2s
        box-shadow 0px 0px 0px 0px rgba(0, 0, 0, 0.4)
    &:hover
        &:before
            margin-top -2px
            margin-left 0px
            transform scale(1.1,1.1)
            -ms-transform scale(1.1,1.1)
            -webkit-transform scale(1.1,1.1)
            box-shadow 0px 5px 5px -2px rgba(0, 0, 0, 0.25)

.btnSlide
    .top
        position absolute
        top 0px
        left 0
        width 120px
        height 50px
        background #00AE68
        z-index 10
        transition all 0.2s
        border-radius 5px
    &.btnLightBlue
        .top
            background #5DC8CD
    .bottom
        position absolute
        top 0
        left 0
        width 120px
        height 50px
        color #000
        z-index 5
        border-radius 5px
    &:hover
        .top
            top 40px



